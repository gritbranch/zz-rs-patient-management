      <script type="text/ng-template" id="/create.html">
        <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
        <h1>{{pageHeader}}</h1>
        <div ng-show="addSuccess" class="alert alert-success">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Add Complete!</strong>
        </div>
        <form ng-submit="addPatient()">
                <input type="text" class="form-control" placeholder="First Name" ng-model="firstName">
                <input type="text" class="form-control" placeholder="Middle Name" ng-model="middleName">
                <input type="text" class="form-control" placeholder="Last Name" ng-model="lastName">
                <input type="text" class="form-control" placeholder="Birthdate" ng-model="birthdate">
                <input type="text" class="form-control" placeholder="Gender" ng-model="gender">
                <input type="text" class="form-control" placeholder="Marital Status" ng-model="maritalStatus">
                <input type="text" class="form-control" placeholder="Occupation" ng-model="occupation">
                <input type="text" class="form-control" placeholder="Contact Number" ng-model="contactNumber">
                <br>
                <a href="#/home" class="btn btn-sm btn-primary" role="button">Cancel</a>
                <button class="btn btn-sm btn-success" type="submit">Save</button>
        </form>
        </div>
        <div class="col-md-4">
        </div>
        </div>
      </script>
      <script type="text/ng-template" id="/view.html">
        <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
        <h1>{{pageHeader}}</h1>
        <div ng-show="updateSuccess" class="alert alert-success">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Patient Information Updated.</strong>
        </div>
        <div ng-show="deleteSuccess" class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Patient Information Deleted.</strong>
        </div>
        <input type="text" class="form-control" placeholder={{person.firstName}} ng-model="person.firstName">
        <input type="text" class="form-control" placeholder={{person.middleName}} ng-model="person.middleName">
        <input type="text" class="form-control" placeholder={{person.lastName}} ng-model="person.lastName">
        <input type="text" class="form-control" placeholder={{person.birthdate}} ng-model="person.birthdate">
        <input type="text" class="form-control" placeholder={{person.gender}} ng-model="person.gender">
        <input type="text" class="form-control" placeholder={{person.maritalStatus}} ng-model="person.maritalStatus">
        <input type="text" class="form-control" placeholder={{person.occupation}} ng-model="person.occupation">
        <input type="text" class="form-control" placeholder={{person.contactNumber}} ng-model="person.contactNumber">

        <br>
        <a href="#/home" class="btn btn-sm btn-primary" role="button">Return</a>
        <button ng-click="updatePerson(person)" type="button" class="btn btn-sm btn-warning">Update</button>
        <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#myModal">Delete</button>

        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Delete Record</h4>
                </div>
                <div class="modal-body">
                        <p>Are you sure you want to delete this record?</p>
                </div>
                <div class="modal-footer">
                        <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Cancel</button>
                        <button ng-click="deletePerson(person)" type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Yes, delete the record</button>
                </form>
                </div>
                </div>
                </div>
        </div>
        </div>
        <div class="col-md-4">
        </div>
        </div>
      </script>
